
<h1> Add a New Figure </h1>

<form method="post" action="/figures">
  <label for="figure_name"> Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name">

  <label> Select an Existing Title(s): </label>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"> <%= title.name %> </input>
  <% end %>

  <label for="title_name"> Or Create a New Title: </label>
  <input type="text" name="title[name]" id="title_name">

  <label> Select an Existing Landmark(s): </label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>"> <%= landmark.name %> </input>
  <% end %>

  <label for="landmark_name"> Or Create a New Landmark: </label>
  <input type="text" name="landmark[name]" id="landmark_name">

  <input type="submit" value="Create New Figure">
</form>
